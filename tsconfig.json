{
  "version": "1.7.5",
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "./dist"
  },
  "filesGlob": [
    "./src/**/*.ts",
    "!./src/test/*.*"
  ],
  "atom": {
    "rewriteTsconfig": true
  },
  "files": [
    "./src/firebase-collections.ts",
    "./src/rxfire.ts"
  ]
}
